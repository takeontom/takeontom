{
  "name": "takeontom",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "images": "npm run images:clean && npm run images:generate",
    "images:generate": "sharp -f png -i src/images/portfolio/* -o public/images/portfolio/ resize 100",
    "images:clean": "rm -rf public/images/portfolio/*",
    "check-types": "tsc --noemit",
    "lint": "npm run check-types && next lint",
    "next:lint": "next lint",
    "tsc-watch": "tsc --watch",
    "eslint": "eslint .",
    "eslint-fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "react-qrcode-logo": "^4.0.0",
    "shortid": "^2.2.17",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/shortid": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "pre-commit": "^1.2.2",
    "prettier-plugin-css-order": "^2.2.0",
    "sass": "^1.97.2",
    "sharp-cli": "^5.2.0",
    "ts-node": "^10.9.2"
  }
}
